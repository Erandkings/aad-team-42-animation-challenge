<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/onboardingPageRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/platformLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toTopOf="@id/pageTitle"
        app:layout_constraintEnd_toEndOf="@id/pageTitle"
        app:layout_constraintStart_toStartOf="@id/pageTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/dimens_32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/platformLogo"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/pageSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@id/pageTitle"
        app:layout_constraintStart_toStartOf="@id/pageTitle"
        app:layout_constraintTop_toBottomOf="@id/pageTitle" />

    <TextView
        android:id="@+id/caption_host"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/dimens_32"
        android:background="@drawable/onboard_blue_background"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@id/pageSubTitle"
        app:layout_constraintStart_toStartOf="@id/pageSubTitle"
        app:layout_constraintTop_toBottomOf="@id/pageSubTitle" />

    <TextView
        android:id="@+id/caption"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:textColor="@color/txt_color"
        android:layout_marginStart="@dimen/dimens_16dp"
        android:layout_marginTop="@dimen/dimens_32"
        android:layout_marginEnd="@dimen/dimens_16dp"
        android:background="@drawable/caption_background"
        android:gravity="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/caption_host"
        app:layout_constraintEnd_toEndOf="@id/pageSubTitle"
        app:layout_constraintStart_toStartOf="@id/pageSubTitle"
        app:layout_constraintTop_toBottomOf="@id/pageSubTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>